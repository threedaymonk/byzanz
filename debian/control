Build-Depends: debhelper (>= 5.0.0), gnome-common, libglib2.0-dev, libgconf2-dev, libcairo2-dev, libgtk-3-dev, libx11-dev, libpanel-applet-4-dev, libgstreamer0.10-dev, libgstreamer-plugins-base0.10-dev, pkg-config, libfreetype6-dev
